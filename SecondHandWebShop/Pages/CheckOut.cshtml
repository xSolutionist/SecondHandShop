@page
@model SecondHandWebShop.Pages.CheckOutModel
@{ }

<div class="container">
    <br />
    <p class="text-center first-page">Kassa</p>

    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span>Din varukorg</span>
            </h4>
            <ul class="list-group mb-3">
                @if (CartModel.cart != null)
                {
    @foreach (var item in CartModel.cart)
    {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@item.Clothes.Name</h6>
                        <small class="text-muted">@item.Clothes.Category</small>
                    </div>
                    @if (item.Quantity > 1)
                    {
                    @*<p class="mb-0"><span><strong>@Math.Round(item.Clothes.Price) * @item.Quantity <br /> @Math.Round(item.Clothes.Price * item.Quantity) SEK</strong></span></p>*@
                    <span class="text-muted">@Math.Round(item.Clothes.Price * item.Quantity)</span>
                    }
                    else
                    {
                    <span class="text-muted">@Math.Round(item.Clothes.Price)</span>
                    }
                </li>
                    Model.Total = CartModel.cart.Sum(item => item.Clothes.Price * item.Quantity);
                }}
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (SEK)</span>

                    <strong>@Math.Round(Model.Total)</strong>
                    

                </li>

            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Fakturaadress</h4>
            <form class="needs-validation" novalidate method="post">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Order.Name">Förnamn</label>
                        <input asp-for="Order.Name" class="form-control" placeholder="" value="" required>
                        <span asp-validation-for="Order.Name" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Order.LastName">Efternamn</label>
                        <input asp-for="Order.LastName" class="form-control" placeholder="" value="" required>
                        <span asp-validation-for="Order.LastName" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Order.EmailAddress">Email adress</label>
                    <input asp-for="Order.EmailAddress" class="form-control" placeholder="" value="" required>
                    <span asp-validation-for="Order.EmailAddress" class="text-danger"></span>                    <div class="invalid-feedback">
                        Ange en giltig e-postadress för leveransuppdateringar.
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Order.Address">Adress</label>
                    <input asp-for="Order.Address" class="form-control" placeholder="" value="" required>
                    <span asp-validation-for="Order.Address" class="text-danger"></span>  <div class="invalid-feedback">
                        Ange din leveransadress.
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label for="country">Land</label>
                        <select class="custom-select d-block w-100" id="selcountry" asp-for="Order.Country" required>
                            <option value="" selected disabled hidden>-Välj-</option>
                            <option>Sverige</option>
                            <option>EU</option>
                            <option>USA</option>
                        </select>
                        <div class="invalid-feedback">
                            Välj ett giltigt land.
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Order.Ort">Ort</label>
                        <input asp-for="Order.Ort" class="form-control" placeholder="" value="" required>
                        <span asp-validation-for="Order.Ort" class="text-danger"></span>                        <div class="invalid-feedback">
                            Vänligen ange en ort.
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Order.ZipCode">Postnummer</label>
                        <input asp-for="Order.ZipCode" class="form-control" placeholder="" value="" required>
                        <span asp-validation-for="Order.ZipCode" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Postnummer krävs.
                        </div>
                    </div>
                </div>
                <hr class="mb-4">

                @*<h4 class="mb-3">Betalning</h4>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-name">Kortinnehavarens namn</label>
                            <input type="text" class="form-control" id="cc-name" placeholder="" required>
                            <small class="text-muted">
                                Uppge din fullständiga namn som visas på kortet
                            </small>
                            <div class="invalid-feedback">
                                Name on card is required
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cc-number">Kreditkortsnummer</label>
                            <input type="text" class="form-control" id="cc-number" placeholder="" required>
                            <div class="invalid-feedback">
                                Credit card number is required
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration">Utgångsdatum</label>
                            <input type="text" class="form-control" id="cc-expiration" placeholder="" required>
                            <div class="invalid-feedback">
                                Expiration date required
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-cvv">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
                            <div class="invalid-feedback">
                                Security code required
                            </div>
                        </div>
                    </div>*@
                @*<hr class="mb-4">*@
                <div class="form-group">
                    @*<input type="submit" value="Create" class="btn btn-secondary btn-lg btn-block" />*@
                    <button class="btn btn-secondary btn-lg btn-block" type="submit" value="Create" asp-page="AdminOrders/Index">Betala nu</button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
